{
    "browser_specific_settings": {
        "gecko": {
            "strict_min_version": "58.0a1"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "action": {
        "default_icon": {
            "16": "icon.webp",
            "32": "icon.webp"
        },
        "default_title": "Start collecting logs in background"
    },
    "host_permissions": [
        "https://boardgamearena.com/*",
        "*://*/*"
    ],
    "description": "Automatically download Ark Nova logs from BGA",
    "homepage_url": "https://github.com/th1rt3en/ark-nova-logs-ext",
    "manifest_version": 3,
    "name": "Ark Nova BGA Logs Downloader",
    "permissions": [
        "activeTab",
        "alarms",
        "storage",
        "scripting",
        "tabs",
        "webNavigation"
    ],
    "version": "1.0"
}