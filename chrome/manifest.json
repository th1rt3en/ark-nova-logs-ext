{
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Start"
    },
    "host_permissions": [
        "https://boardgamearena.com/*",
        "*://*/*",
        "<all_urls>"
    ],
    "icons": {
        "48": "icon.png"
    },
    "description": "Automatically download Ark Nova logs from BGA",
    "homepage_url": "https://github.com/th1rt3en/ark-nova-logs-ext",
    "manifest_version": 3,
    "name": "Ark Nova BGA Logs Downloader",
    "permissions": [
        "activeTab",
        "alarms",
        "storage",
        "scripting",
        "tabs",
        "webRequest",
        "webNavigation"
    ],
    "version": "1.0"
}